<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools2"
    xmlns:custom="http://schemas.android.com/tools"
    android:id="@+id/content_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cppminitraktor.nikolay.minitraktor.MenuActivity"
    tools:showIn="@layout/app_bar_menu"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlueGrey400"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWite"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="0dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Принцип работы и устройство"
                        android:textColor="@color/colorMy"
                        android:textSize="17sp" />


                    <ImageView
                        android:id="@+id/imageView403111"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:elevation="0dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/r80_vid" />

                    <TextView
                        android:id="@+id/textView1641"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Гидрораспределитель Р80 3/1 222"
                        android:textColor="@color/colorMy"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/imageView4031"
                        android:layout_width="wrap_content"
                        android:layout_height="279dp"
                        android:layout_margin="3dp"
                        android:elevation="0dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/r80_22" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="Гидрораспределитель Р80 3/1 22"
                        android:textColor="@color/colorMy"
                        android:textSize="14sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="1dp"
                    android:background="@color/colorWite"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Тип: клапанно-золотниковый, моноблочный"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView11447"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Давление разгрузки, МПа: не больше 0,3"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Расход рабочей жидкости (min/nom/max):"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView1941547"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="20/80/120 (л/мин)"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/textView194147"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Всего золотников: 3/2 (3 или 2 секции)"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView401"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Масса: 18/12 (кг)"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView40341"
                        android:layout_width="match_parent"
                        android:layout_height="700dp"
                        android:layout_weight="1"
                        android:elevation="0dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/pro" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView4045341"
                        android:layout_width="match_parent"
                        android:layout_height="700dp"
                        android:layout_weight="1"
                        android:elevation="0dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/pras" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="1dp"
                    android:background="@color/colorWite"
                    android:gravity="bottom|center"
                    android:orientation="horizontal">

                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>